        <div class="uk-width-medium-1-2 uk-text-center uk-row-first">
             <div class="uk-thumbnail uk-overlay-hover uk-border-circle">
               <%= link_to dash_scrape_path(@dash) do %> 
                   <figure class="uk-overlay">
                       <img class="uk-border-circle" width="250" height="250" src="/fire23.svg" alt="">
