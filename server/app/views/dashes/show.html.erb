<%= render "dashes/nav_standard" %>

<p class="notice"><%= notice %></p>
<p class="alert"><%= alert %></p>

        <div class="uk-container uk-container-center uk-margin-top uk-margin-large-bottom">


          <div class="uk-grid uk-grid-small">
              <div class="uk-width-1-4">
                <div class="uk-panel uk-panel-box uk-panel-box-primary">
  <%= form_tag "/dashes/#{@dash.id}/twitter-pics", method: "get" do %>
    <%= text_field_tag :search_term, @dash.twitter_pic_search, class: "uk-width-1-1"  %>
  <%= submit_tag "Twitter", class: "twitter-button scrape-button uk-button uk-button-large uk-width-1-1 uk-margin-small-bottom" %>
  <% end %>                  
                </div>
              </div>
              <div class="uk-width-1-4">
                <div class="uk-panel uk-panel-box uk-panel-box-primary">
  <%= form_tag("/dashes/#{@dash.id}/giphy-gifs", method: "get") do %>
    <%= text_field_tag :search_term, @dash.giphy_search, class: "uk-width-1-1"  %>
  <%= submit_tag "Giphy", class: "giphy-button uk-button scrape-button uk-button-large uk-width-1-1 uk-margin-small-bottom" %>
  <% end %>                 
                </div>
              </div>
              <div class="uk-width-1-4">
                <div class="uk-panel uk-panel-box uk-panel-box-primary">
<%= form_tag("/dashes/#{@dash.id}/reddit-pics", method: "get") do %>
  <%= text_field_tag :search_term, @dash.subreddit, class: "uk-width-1-1" %>
  <%= submit_tag "Reddit", class: "reddit-button scrape-button uk-button uk-button-large uk-width-1-1 uk-margin-small-bottom" %>
<% end %>                
                </div>
              </div>
              <div class="uk-width-1-4">
                <div class="uk-panel uk-panel-box uk-panel-box-primary">
<%= form_tag("/dashes/#{@dash.id}/tumblr-pics", method: "get") do %>
  <%= text_field_tag :search_term, @dash.tumblr_pic_search, class: "uk-width-1-1" %>
  <%= submit_tag "Tumblr", class: "tumblr-button scrape-button uk-button uk-button-large uk-width-1-1 uk-margin-small-bottom" %>
<% end %>               
                </div>
              </div>
          </div>
<%= link_to 'Queue', dash_post_queue_path(@dash, @post) %>

<%= link_to 'Settings', edit_dash_path(@dash) %> |
<%= link_to 'Back', dashes_path %>


  <div class="uk-grid-width-small-1-2 uk-grid-width-medium-1-4" data-uk-grid>
    <% @posts.each do |post|  %>
      <div class="overlay">
          <div>
            <div class="pic_holder">
              <% if !post.image_src.nil? %>
                 <%= image_tag post.og_source %> 
              <% else %>
                <%= image_tag post.usr_image(:medium) %>
                <a href=""><i class="uk-icon-cog"></i> ...</a>
              <% end %>
              <%= link_to "", toggle_approve_dash_post_path(@dash, post), :remote => true, class: "toggle_button toggle_approve" %>  
              <%= link_to "", toggle_disapprove_dash_post_path(@dash, post), :remote => true, class: "toggle_button toggle_disapprove" %>     
            </div>
            <h3><%= post.body %></h3>
            <br/> 
          </div>
   
      <hr/> 
      </div>
    <% end %>
  </div>
</div>
</div>


