<%= render "dashes/nav_standard" %>

<p class="notice"><%= notice %></p>
<p class="alert"><%= alert %></p>
<div class="uk-container uk-container-center uk-margin-top uk-margin-large-bottom">    
	<div class="uk-grid" data-uk-grid-margin="">

        <div class="uk-width-medium-1-2 uk-row-first">
            <img width="400" height="400" src="/robot7.svg" alt="">
        </div>

        <div class="uk-width-medium-1-2 uk-grid">
            <div class="uk-text-bottom">
                <h1 class="">this is phil</h1>
			    <hr class="uk-grid-divider">
                <h2 class="">he's very good at following directions.</h2>
                <p class="">he's here to help people find your brand.</p>
                <p class="">plug in a few tags below, the emphasis on each tag, and phil will go to work for you.</p>
                <h3 class="">let phil bring the friends to you.</h3>
            </div>
        </div>

    </div>
	<hr class="uk-grid-divider ">
	<div class="uk-block  uk-text-center">
		<%= form_tag dash_add_term_path(@dash), method: "get", remote: true, class: "uk-form" do %>
		    <div class="uk-grid">
			    <div class="uk-width-1-1">
				  <%= text_field_tag :body,nil, placeholder: "terms", class: 'uk-width-1-3 uk-margin-remove' %>
				  <%= text_field_tag :count,nil, placeholder: "count", class: 'uk-width-1-3 uk-margin-remove' %>
				  <%= submit_tag "add", class: "uk-button term-add uk-width-1-4 uk-margin-remove" %>
				</div>
			</div>
		<% end %>    
	</div>
	<div class="uk-block uk-block-muted">
		<div class="uk-container">
			<ul class="uk-sortable uk-grid uk-grid-small uk-grid-width-1-4" data-uk-sortable="">
		        <% @dash.terms.each do |term| %>
			        <li class="uk-grid-margin"><div class="uk-panel uk-panel-box"><%= term.body %> - <%= term.count %> <span class="uk-badge uk-badge-notification uk-badge-success"><%= term.favorite_count %></span>    
    | <%= link_to "Remove", dash_destroy_term_path(@dash, term_id: term.id), method: :delete, remote: true %>  </div></li>
		    	<% end %>
		    </ul>
	    </div>
    </div>
	<hr class="uk-grid-divider ">
<%= link_to 'start phil!', dash_favorite_tweets_path(@dash), remote: true, class: "uk-button uk-width-1-1 start-button" %>
</div>

<script type="text/javascript">
  $(document).ready(function(){
  	$('.term-add').bind('click', function(){
  		$(this).data("disabled")
  		console.log("hey")
  	});

    $('.term-add').bind('ajax:success', function(){
      UIkit.notify({
          message : "Success!",
          status  : 'success',
          timeout : 2500,
          pos     : 'top-center'
      });
      $(this).
    });
    $('.term-add').bind('ajax:error', function(){
      UIkit.notify({
          message : "Uh oh! There was an issue..",
          status  : 'danger',
          timeout : 2500,
          pos     : 'top-center'
      });  
    });
  });
</script>

<script type="text/javascript">
  $(document).ready(function(){
    $('.start-button').bind('ajax:success', function(){
      UIkit.notify({
          message : "Success!",
          status  : 'success',
          timeout : 2500,
          pos     : 'top-center'
      });
      $(this).removeAttr("href")
      $(this).removeAttr("data-remote")
      $(this).addClass("disabled");
    });
    $('.start-button').bind('ajax:error', function(){
      UIkit.notify({
          message : "Uh oh! There was an issue..",
          status  : 'danger',
          timeout : 2500,
          pos     : 'top-center'
      });  
    });
  });
</script>