<%= render "dashes/nav_standard" %>


        <div class="uk-container uk-container-center uk-margin-top uk-margin-large-bottom">

<p class="notice"><%= notice %></p>
<p class="alert"><%= alert %></p>

<div class="uk-grid uk-grid-small">

<%= link_to "Find The Fire!", dash_scrape_path(@dash), class: "uk-button uk-button-large uk-width-1-1 uk-margin-bottom" %>
          </div>
  <div class="uk-grid-width-small-1-2 uk-grid-width-medium-1-4" data-uk-observe data-uk-grid>
    <% @posts.each do |post|  %>
      <div class="overlay">
          <div>
            <div class="pic_holder">
              <% if !post.image_src.nil? %>
                 <%= image_tag post.og_source %> 
              <% else %>
                <%= image_tag post.usr_image(:medium) %>
              <% end %>
              <%= link_to "", toggle_disapprove_dash_post_path(@dash, post), :remote => true, class: "toggle_button toggle_disapprove_queue" %>     
            </div>
            <h3><%= post.body %></h3>                          
              <div class="uk-button-group">
                  <a class="uk-button disabled">
                    <i class="uk-icon-facebook"></i>
                  </a>

                <% if post.twit_published < 1 %>
                  <%= link_to dash_post_tweet_path(@dash, post_id: post.id), class: "uk-button" do %>
                    <i class="uk-icon-twitter"></i>
                  <% end %>
                <% else %>
                  <a class="uk-button disabled">
                    <i class="uk-icon-twitter"></i>
                  </a>
                <% end %>
                <% if post.tumblr_published < 1 %>
                  <%= link_to dash_post_tumblr_path(@dash, post_id: post.id), remote: true, class: "uk-button", id: "button1" do %>
                    <i class="uk-icon-tumblr"></i>
                  <% end %>
                <% else %>
                  <a class="uk-button disabled">
                    <i class="uk-icon-tumblr"></i>
                  </a>
                <% end %>
                  <a href="#" class="uk-button disabled">
                    <i class="uk-icon-wordpress"></i>
                  </a>
                  <a href="#" class="uk-button disabled">
                    <i class="uk-icon-mail-forward"></i>
                  </a>
                  <a href="#" class="uk-button disabled">
                    <i class="uk-icon-mobile-phone"></i>
                  </a>
              </div>
            <br/> 
          </div>
            <hr/> 
      </div>
    <% end %>
            <br/> 
  </div>
</div>
</div>
<script type="text/javascript">
  $(document).ready(function(){
    $('.toggle_disapprove_queue').click(function(){
      var parent = $(this).parent().parent().parent();
      parent.remove();
      var container = $('.uk-grid-width-small-1-2');
      var w = container.width();
      console.log("width: ",w);
      $(window).trigger("resize");
    })
      $(window).trigger("resize");
  })
</script>
<script type="text/javascript">
  $(document).ready(function(){
    $('.uk-button').bind('ajax:success', function(){
      UIkit.notify({
          message : "Success!",
          status  : 'success',
          timeout : 2500,
          pos     : 'top-center'
      });
      $(this).removeAttr("href")
      $(this).removeAttr("data-remote")
      $(this).addClass("disabled");
    });
    $('.uk-button').bind('ajax:error', function(){
      UIkit.notify({
          message : "Uh oh! There was an issue..",
          status  : 'danger',
          timeout : 2500,
          pos     : 'top-center'
      });  
    });
  });
</script>