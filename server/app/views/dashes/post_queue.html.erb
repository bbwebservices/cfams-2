<%= render "dashes/nav_standard" %>

<p class="notice"><%= notice %></p>
<p class="alert"><%= alert %></p>

        <div class="uk-container uk-container-center uk-margin-top uk-margin-large-bottom">


<div class="uk-grid uk-grid-small">

          </div>
  <div class="uk-grid-width-small-1-2 uk-grid-width-medium-1-4" data-uk-observe data-uk-grid>
    <% @posts.each do |post|  %>
      <div class="overlay">
          <div>
            <div class="pic_holder">
              <% if !post.image_src.nil? %>
                 <%= image_tag post.og_source %> 
              <% else %>
                <%= image_tag post.usr_image(:medium) %>
              <% end %>
              <%= link_to "", toggle_disapprove_dash_post_path(@dash, post), :remote => true, class: "toggle_button toggle_disapprove_queue" %>     
            </div>
            <h3><%= post.body %></h3>                          
              <div class="uk-button-group">
                  <a href="#" class="uk-button"><i class="uk-icon-facebook"></i></a>
                  <a href="#" class="uk-button"><i class="uk-icon-twitter"></i></a>
                  <a href="#" class="uk-button"><i class="uk-icon-tumblr"></i></a>
                  <a href="#" class="uk-button"><i class="uk-icon-wordpress"></i></a>
                  <a href="#" class="uk-button"><i class="uk-icon-mail-forward"></i></a>
                  <a href="#" class="uk-button"><i class="uk-icon-mobile-phone"></i></a>
              </div>
            <br/> 
          </div>
            <hr/> 
      </div>
    <% end %>
            <br/> 
  </div>
</div>
</div>
<script type="text/javascript">
  $(window).ready(function(){
    $('.toggle_disapprove_queue').click(function(){
      var parent = $(this).parent().parent().parent();
      parent.remove();
      var container = $('.uk-grid-width-small-1-2');
      var w = container.width();
      console.log("width: ",w);
      $(window).trigger("resize");
    })
      $(window).trigger("resize");
  })
</script>