<p id="notice"><%= notice %></p>

<h1>Listing Accts</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @dashes.each do |dash| %>
      <tr>
        <td><%= dash.title %></td>
        <td><%= link_to 'Show', dash %></td>
        <td><%= link_to 'Edit', edit_dash_path(dash) %></td>
        <td><%= link_to 'Destroy', dash, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<% if current_user.role != 'user' || current_user.dashes.count == 0 %>
  <%= link_to 'New Dash', new_dash_path %>
<% end %>

  <li>
  <%= link_to('Logout', destroy_user_session_path, :method => :delete) %>        
  </li>
